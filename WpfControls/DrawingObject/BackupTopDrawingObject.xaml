<UserControl x:Class="ElementUI.WpfControls.DrawingObject.BackupTopDrawingObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElementUI.WpfControls.DrawingObject" xmlns:wpfcontrols="clr-namespace:ElementUI.WpfControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <Grid>
        <Border Width="40" Height="40" CornerRadius="20" Background="#1E000000" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Border.Effect>
                <BlurEffect Radius="6"></BlurEffect>
            </Border.Effect>
        </Border>
        <Border Width="40" Height="40" CornerRadius="20"  HorizontalAlignment="Left" VerticalAlignment="Top" Background="White">
            <ContentControl Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Icon}"></ContentControl>
        </Border>
    </Grid>
</UserControl>
