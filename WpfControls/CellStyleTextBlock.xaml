<UserControl x:Class="ElementUI.WpfControls.CellStyleTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElementUI.WpfControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="root">
        <TextBlock Foreground="{Binding Style.Foreground}"
                   FontSize="{Binding Style.FontSize}"
                   FontFamily="{Binding Style.FontFamily}"
                   FontStyle="{Binding Style.FontStyle}"
                   FontWeight="{Binding Style.FontWeight}"
                   TextDecorations="{Binding Style.TextDecoration}"
                   Text="{Binding Text}">
        </TextBlock>
    </Grid>
</UserControl>
